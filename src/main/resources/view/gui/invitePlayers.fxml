<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane hgap="50.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="it.simonetagliaferri.controller.graphic.gui.GraphicInvitePlayersHostControllerGUI">
   <columnConstraints>
      <ColumnConstraints hgrow="NEVER"/>
      <ColumnConstraints hgrow="NEVER"/>
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
   </rowConstraints>
   <VBox fx:id="invitedTeams" GridPane.hgrow="NEVER" GridPane.vgrow="NEVER">
      <Label alignment="TOP_LEFT" text="Invited teams"/>
   </VBox>
   <VBox fx:id="inviteDetails" alignment="TOP_CENTER" maxWidth="441.0" minWidth="441.0" GridPane.columnIndex="1"
         GridPane.hgrow="NEVER" GridPane.vgrow="NEVER">
      <Label fx:id="title" text="Invite players to the tournament" wrapText="true"/>
      <VBox styleClass="box">
         <Label fx:id="expDateLabel" styleClass="text" text="Invite expire date"/>
         <DatePicker fx:id="expireDatePicker" onAction="#checkExpireDate"/>
      </VBox>
      <VBox styleClass="box">
         <VBox.margin>
            <Insets/>
         </VBox.margin>
         <Label styleClass="text" text="Player"/>
         <TextField fx:id="player1NameField" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0"
                    prefWidth="441.0" promptText="Player username/Email" styleClass="text-field"
                    VBox.vgrow="NEVER"/>
         <Label styleClass="text" text="Message"/>
         <TextField fx:id="player1Message" promptText="Add a message to the invite"/>
         <RadioButton fx:id="emailPlayer1" mnemonicParsing="false" text="Send email"/>
      </VBox>
      <VBox alignment="BOTTOM_RIGHT" styleClass="box">
         <HBox alignment="CENTER_RIGHT" spacing="20.0">
            <Button fx:id="confirmButton" alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity"
                    mnemonicParsing="false" onAction="#inviteTeam" prefHeight="30.0" prefWidth="125.0"
                    styleClass="blue-button" text="Add team"/>
            <Button alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity"
                    mnemonicParsing="false" onAction="#goHome" prefHeight="30.0" prefWidth="125.0"
                    styleClass="blue-button" text="Exit"/>
         </HBox>
      </VBox>
   </VBox>
</GridPane>
