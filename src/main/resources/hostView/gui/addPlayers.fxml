<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="TOP_RIGHT" styleClass="box" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.simonetagliaferri.controller.graphic.gui.AddPlayersFormController">
   <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" HBox.hgrow="NEVER">
      <HBox.margin>
         <Insets/>
      </HBox.margin>
      <padding>
         <Insets right="20.0"/>
      </padding>
      <VBox alignment="TOP_RIGHT" styleClass="box">
         <VBox fx:id="tournamentDataPanel" styleClass="box">
            <children>
               <TextField fx:id="tournamentNameField" maxHeight="-Infinity" minHeight="-Infinity"
                          prefHeight="30.0" prefWidth="441.0" promptText="Search for a player"
                          styleClass="text-field" VBox.vgrow="NEVER"/>
            </children>
            <VBox.margin>
               <Insets/>
            </VBox.margin>
         </VBox>
      </VBox>
   </ScrollPane>
   <VBox alignment="BOTTOM_RIGHT" styleClass="box" HBox.hgrow="ALWAYS">
      <children>
         <Button fx:id="confirmButton" alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity"
                 mnemonicParsing="false" prefHeight="30.0" prefWidth="125.0" styleClass="blue-button" text="Confirm"/>
      </children>
      <HBox.margin>
         <Insets bottom="20.0" right="20.0"/>
      </HBox.margin>
   </VBox>
</HBox>
