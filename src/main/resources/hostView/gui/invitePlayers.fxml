<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" styleClass="box" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.simonetagliaferri.controller.graphic.gui.GraphicInvitePlayersHostControllerGUI">
   <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" HBox.hgrow="NEVER">
      <HBox.margin>
         <Insets />
      </HBox.margin>
      <padding>
         <Insets right="20.0" />
      </padding>
      <HBox>
         <children>
            <VBox fx:id="invitedTeams" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Invited teams" />
               </children>
            </VBox>
            <VBox fx:id="inviteDetails" alignment="CENTER">
               <children>
                  <Label fx:id="title" text="Invite players to the tournament" />
                  <VBox fx:id="tournamentDataPanel111" styleClass="box">
                     <children>
                        <Label fx:id="expDateLabel" styleClass="text" text="Invite expire date" />
                        <DatePicker fx:id="expireDatePicker" onAction="#checkExpireDate" />
                     </children>
                  </VBox>
                  <VBox fx:id="tournamentDataPanel" styleClass="box">
                     <children>
                        <Label fx:id="player1Label" styleClass="text" text="Player" />
                        <TextField fx:id="player1NameField" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" prefWidth="441.0" promptText="Player username/Email" styleClass="text-field" VBox.vgrow="NEVER" />
                        <Label fx:id="expDateLabel11" styleClass="text" text="Message" />
                        <TextField fx:id="player1Message" promptText="Add a message to the invite" />
                        <RadioButton fx:id="emailPlayer1" mnemonicParsing="false" text="Send email" />
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </VBox>
                  <VBox alignment="BOTTOM_RIGHT" styleClass="box">
                     <children>
                        <HBox alignment="CENTER_RIGHT">
                           <children>
                              <Button fx:id="confirmButton" alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity" mnemonicParsing="false" onAction="#inviteTeam" prefHeight="30.0" prefWidth="125.0" styleClass="blue-button" text="Add team" />
                              <Button fx:id="exitButton" alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity" mnemonicParsing="false" onAction="#goHome" prefHeight="30.0" prefWidth="125.0" styleClass="blue-button" text="Exit" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </ScrollPane>
</HBox>
